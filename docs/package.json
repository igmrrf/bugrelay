{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "bugrelay-docs",
  "version": "1.0.0",
  "description": "Documentation generation tools for BugRelay backend",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run generate:all && npm run build:site",
    "generate:all": "npm run generate:openapi && npm run generate:schemas && npm run generate:mcp",
    "generate:openapi": "node scripts/generate-openapi.js && node scripts/generate-openapi-json.js",
    "generate:schemas": "node scripts/generate-schemas.js",
    "generate:mcp": "node scripts/generate-mcp.js",
    "build:site": "vitepress build",
    "dev": "vitepress dev --port 3001",
    "preview": "vitepress preview --port 3002",
    "serve": "npm run build && npm run preview",
    "validate": "npm run validate:openapi && npm run validate:schemas",
    "validate:openapi": "node scripts/validate-openapi.js",
    "validate:schemas": "node scripts/validate-schemas.js",
    "test:accuracy": "node scripts/test-api-accuracy.js",
    "test:examples": "node scripts/test-examples.js",
    "test:example-accuracy": "node scripts/test-example-accuracy.js",
    "test:comprehensive": "node scripts/test-comprehensive.js",
    "test:all": "npm run test:comprehensive",
    "test:coverage": "npm run test:accuracy && npm run test:examples && npm run test:example-accuracy",
    "check:completeness": "node scripts/check-completeness.js",
    "sync:versions": "node scripts/sync-versions.js",
    "maintenance": "npm run check:completeness && npm run sync:versions && npm run validate",
    "clean": "rm -rf .vitepress/dist .vitepress/cache temp-examples test-reports",
    "lint:docs": "markdownlint **/*.md --ignore node_modules"
  },
  "devDependencies": {
    "vitepress": "^1.0.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "openapi-types": "^12.1.3",
    "swagger-parser": "^10.0.3",
    "vitepress-plugin-search": "^1.0.4-alpha.22",
    "markdown-it-container": "^4.0.0",
    "markdown-it-attrs": "^4.1.6",
    "prismjs": "^1.29.0",
    "swagger-ui-dist": "^5.10.0",
    "redoc": "^2.1.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  }
}