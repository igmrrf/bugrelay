# Production Environment Configuration for BugRelay
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
DB_NAME=bugrelay_production
DB_USER=bugrelay_user
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
OAUTH_REDIRECT_URL=https://bugrelay.com/api/v1/auth/oauth/callback

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://bugrelay.com/api/v1

# Logging Configuration
LOGS_API_KEY=your_secure_logs_api_key_here

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_ROOT_URL=https://monitoring.bugrelay.com
GRAFANA_SECRET_KEY=your_grafana_secret_key_32_chars_min

# AlertManager Configuration
ALERTMANAGER_EXTERNAL_URL=https://monitoring.bugrelay.com/alertmanager

# Email Configuration (for alerts)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=alerts@bugrelay.com
SMTP_PASSWORD=your_smtp_password

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Configuration (for critical alerts)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/bugrelay.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/bugrelay.com.key

# Backup Configuration
BACKUP_S3_BUCKET=bugrelay-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Domain Configuration
DOMAIN=bugrelay.com
MONITORING_DOMAIN=monitoring.bugrelay.com